<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <section class="admin">
      <div class="container">
        <div class="users pt-4 pt-lg-5"> 
          <div class="row justify-content-center">
            <div class="col-lg-8">
              <h2>Añadir nuevo usuario</h2>
              <hr>
              <form method="POST" class="py-3" action="/users" id="new-username">
                <div class="row">
                  <div class="col-md-6">
                    <label for="username" class="form-label">Usuario (sin espacios)</label>
                    <input type="text" class="form-control mb-3" id="username" name="username" required>
                  </div>
                  <div class="col-md-6">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="text" class="form-control mb-3" id="password" name="password" required>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Añadir usuario</button>
              </form>
              <h2 class="mt-4">Usuarios</h2>
              <hr>
              <% data['usernames'].forEach(function(username){ %>
                <div class="row mb-4" id="accordion-<%= username %>">
                  <div class="col-md-6"><h4><%= username %></h4></div>
                  <div class="col-md-6 d-flex justify-content-lg-end">
                    <button type="button" class="btn btn-sm btn-warning me-2" data-bs-toggle="collapse" data-bs-target="#modificar-<%= username %>" aria-expanded="true" aria-controls="modificar-<%= username %>">Cambiar contraseña</button>
                    <% if (username !== 'admin') { %>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="collapse" data-bs-target="#eliminar-<%= username %>" aria-expanded="true" aria-controls="eliminar-<%= username %>">Eliminar usuario</button>
                    <% } %>
                  </div>
                  <div class="col-12">
                    <div class="accordion-collapse collapse" aria-labelledby="modificar-<%= username %>" data-bs-parent="#accordion-<%= username %>" id="modificar-<%= username %>">
                      <form method="POST" class="py-3" action="/users?_method=PUT">
                        <input type="hidden" name="username" value="<%= username %>">
                        <label for="password" class="form-label">Nueva contraseña</label>
                        <input type="text" class="form-control mb-3" id="password" name="password" required>
                        <button type="submit" class="btn btn-primary">Cambiar contraseña</button>
                      </form>
                    </div>
                  </div>
                  <% if (username !== 'admin') { %>
                  <div class="col-12">
                    <div class="accordion-collapse collapse" aria-labelledby="eliminar-<%= username %>" data-bs-parent="#accordion-<%= username %>" id="eliminar-<%= username %>">
                      <form method="POST" class="py-3" action="/users?_method=DELETE">
                        <input type="hidden" name="username" value="<%= username %>">
                        <p><strong>Seguro que desea eliminar el usuario <em><%= username %></em>?</strong></p>
                        <button type="submit" class="btn btn-danger">ELIMINAR USUARIO</button>
                      </form>
                    </div>
                  </div>
                  <% } %>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>